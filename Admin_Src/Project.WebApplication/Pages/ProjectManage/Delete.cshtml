@page
@model Project.WebApplication.Pages.ProjectManage.DeleteModel
@{
    ViewData["Title"] = "Xóa dự án";
}

<section id="main-content">
    <section class="wrapper">
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        Xác nhận xóa dự án
                    </header>
                    <div class="panel-body">
                        <h3>Bạn có chắc chắn muốn xóa dự án này?</h3>
                        <div class="form-horizontal">
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Mã dự án</label>
                                <div class="col-sm-10">
                                    <p class="form-control-static">@Model.DuAn.MaDuAn</p>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-2 control-label">Tên dự án</label>
                                <div class="col-sm-10">
                                    <p class="form-control-static">@Model.DuAn.TenDuAn</p>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-2 control-label">Giá dự kiến</label>
                                <div class="col-sm-10">
                                    <p class="form-control-static">@Model.DuAn.GiaDuAn</p>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-2 control-label">Số ngày thi công dự kiến</label>
                                <div class="col-sm-10">
                                    <p class="form-control-static">@Model.DuAn.SoNgayThiCongDuKien</p>
                                </div>
                            </div>

                            <form method="post">
                                <input type="hidden" asp-for="DuAn.MaDuAn" />
                                <div class="form-group">
                                    <div class="col-sm-offset-2 col-sm-10">
                                        <button type="submit" class="btn btn-danger">
                                            <i class="fa fa-trash"></i> Xác nhận xóa
                                        </button>
                                        <a asp-page="./Index" class="btn btn-default">
                                            <i class="fa fa-arrow-left"></i> Quay lại
                                        </a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </section>
</section>
