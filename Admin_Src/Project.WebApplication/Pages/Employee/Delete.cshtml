@page "{id}"
@model Project.WebApplication.Pages.Employee.DeleteModel
@{
    ViewData["Title"] = "Xóa nhân viên";
}

<section id="main-content">
    <section class="wrapper">
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        Xác nhận xóa nhân viên
                    </header>
                    <div class="panel-body">
                        <h3>Bạn có chắc chắn muốn xóa nhân viên này?</h3>
                        <div class="form-horizontal">
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Mã nhân viên</label>
                                <div class="col-sm-10">
                                    <p class="form-control-static">@Model.NhanVien.MaNhanVien</p>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-2 control-label">Tên nhân viên</label>
                                <div class="col-sm-10">
                                    <p class="form-control-static">@Model.NhanVien.HoTen</p>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-2 control-label">Email</label>
                                <div class="col-sm-10">
                                    <p class="form-control-static">@Model.NhanVien.Email</p>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-2 control-label">Địa chỉ</label>
                                <div class="col-sm-10">
                                    <p class="form-control-static">@Model.NhanVien.DiaChia</p>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-2 control-label">Ngày sinh</label>
                                <div class="col-sm-10">
                                    <p class="form-control-static">@Model.NhanVien.NgayThangNamSinh</p>
                                </div>
                            </div>

                            <form method="post">
                                <input type="hidden" asp-for="NhanVien.MaNhanVien" />
                                <div class="form-group">
                                    <div class="col-sm-offset-2 col-sm-10">
                                        <button type="submit" class="btn btn-danger">
                                            <i class="fa fa-trash"></i> Xác nhận xóa
                                        </button>
                                        <a asp-page="./Index" class="btn btn-default">
                                            <i class="fa fa-arrow-left"></i> Quay lại
                                        </a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </section>
</section>
