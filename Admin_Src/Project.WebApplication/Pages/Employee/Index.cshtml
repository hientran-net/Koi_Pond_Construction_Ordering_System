@page
@model IndexModel
@{
    ViewData["Title"] = "Danh sách nhân viên";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}


<!--main content start-->
<section id="main-content">
    <section class="wrapper">
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        Quản lý nhân viên
                        <a href="/Employee/Create" class="btn btn-success pull-right" style="margin-top: -5px;">
                            <i class="fa fa-plus"></i> Thêm nhân viên mới
                        </a>
                    </header>
                    <div class="panel-body">
                        <!-- Search and Filter Section -->
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="input-group">
                                    <input type="text" id="searchInput" class="form-control" placeholder="Tìm kiếm nhân viên...">
                                    <span class="input-group-btn">
                                        <button class="btn btn-default" type="button"><i class="fa fa-search"></i></button>
                                    </span>
                                </div>
                            </div>
                        </div>

                        <!-- Employee Table -->
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Họ tên</th>
                                    <th>Email</th>
                                    <th>Số điện thoại</th>
                                    <th>Địa chỉ</th>
                                    <th>Ngày Sinh</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var employee in Model.NhanViens)
                                {
                                    <tr>
                                        <td>@employee.MaNhanVien</td>
                                        <td>@employee.HoTen</td>
                                        <td>@employee.Email</td>
                                        <td>@employee.SoDienThoai</td>
                                        <td>@employee.DiaChia</td>
                                        <td>@employee.NgayThangNamSinh</td>
                                        <td>
                                            <a asp-page="./Edit" asp-route-id="@employee.MaNhanVien" class="btn btn-warning">
                                                <i class="fas fa-edit"></i> Edit
                                            </a>
                                            <form method="post" asp-page="./Delete" asp-route-id="@employee.MaNhanVien" 
                                                  style="display: inline-block;"
                                                  onsubmit="return confirm('Bạn có chắc muốn xóa nhân viên này?')">
                                                <button type="submit" class="btn btn-danger">
                                                    <i class="fas fa-trash"></i> Delete
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table
                    </div>
                </section>
            </div>
        </div>
    </section>
</section>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Xác nhận xóa</h4>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn xóa nhân viên này không?</p>
            </div>
            <div class="modal-footer">
                @* <form id="deleteForm" method="post">
                    @Html.AntiForgeryToken()
                    <button type="button" class="btn btn-default" data-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-danger">Xóa</button>
                </form> *@
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(id) {
            $('#deleteForm').attr('action', '/Employee/Delete/' + id);
            $('#deleteModal').modal('show');
        }

        $(document).ready(function() {
            // Search functionality
            $("#searchInput").on("keyup", function() {
                var value = $(this).val().toLowerCase();
                $("table tbody tr").filter(function() {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });

            // Department filter
            $("#departmentFilter").change(function() {
                var value = $(this).val().toLowerCase();
                if (value) {
                    $("table tbody tr").filter(function() {
                        $(this).toggle($(this).find("td:eq(5)").text().toLowerCase() === value)
                    });
                } else {
                    $("table tbody tr").show();
                }
            });
        });
    </script>
}