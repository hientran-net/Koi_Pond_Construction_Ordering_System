@page
@model Project.WebApplication.Pages.CustomerManage.DeleteModel
@{
    ViewData["Title"] = "Xóa khách hàng";
}

<section id="main-content">
    <section class="wrapper">
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        Xác nhận xóa khách hàng
                    </header>
                    <div class="panel-body">
                        <h3>Bạn có chắc chắn muốn xóa khách hàng này?</h3>
                        <div class="form-horizontal">
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Mã khách hàng</label>
                                <div class="col-sm-10">
                                    <p class="form-control-static">@Model.KhachHang.MaKhachHang</p>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-2 control-label">Tên khách hàng</label>
                                <div class="col-sm-10">
                                    <p class="form-control-static">@Model.KhachHang.TenKhachHang</p>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-2 control-label">Địa chỉ</label>
                                <div class="col-sm-10">
                                    <p class="form-control-static">@Model.KhachHang.DiaChi</p>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-2 control-label">Số điện thoại</label>
                                <div class="col-sm-10">
                                    <p class="form-control-static">@Model.KhachHang.SoDienThoai</p>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="col-sm-2 control-label">Email</label>
                                <div class="col-sm-10">
                                    <p class="form-control-static">@Model.KhachHang.Email</p>
                                </div>
                            </div>

                            <form method="post">
                                <input type="hidden" asp-for="KhachHang.MaKhachHang" />
                                <div class="form-group">
                                    <div class="col-sm-offset-2 col-sm-10">
                                        <button type="submit" class="btn btn-danger">
                                            <i class="fa fa-trash"></i> Xác nhận xóa
                                        </button>
                                        <a asp-page="./Index" class="btn btn-default">
                                            <i class="fa fa-arrow-left"></i> Quay lại
                                        </a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </section>
</section>